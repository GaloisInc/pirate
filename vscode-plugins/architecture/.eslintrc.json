{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/semi":  ["warn", "never"],
        "curly": ["warn", "multi-or-nest", "consistent"],
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off"
    }
}
